{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "cSpell.words": [
    "chrono",
    "proptypes",
    "tailwindcss",
    "unixtime",
    "WCAG"
  ],
  "cSpell.ignorePaths": [
    "package*.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "config.yml",
    ".eslintrc",
    "timezones.json"
  ],
}
