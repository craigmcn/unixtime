{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.formatOnSave": false,
    "[html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[css]": {
        "editor.formatOnSave": true,
    },
    "css.validate": true,
    "editor.detectIndentation": false,
    "eslint.validate": [
        "javascript"
    ],
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "beautify.language": {
        "css": ["css"],
    },
    "cSpell.words": [
        "browserslist",
        "chrono",
        "cleancss",
        "craigmcn",
        "DDTHH",
        "gulpif",
        "msapplication",
        "purgecss",
        "tailwindcss",
        "unixtime",
        "unixtimestamp"
    ],
    "cSpell.ignorePaths": [
        "package-lock.json",
        "node_modules",
        "vscode-extension",
        ".git/objects",
        ".vscode",
        ".vscode-insiders",
        "src/data/timezones.json"
    ],
}
